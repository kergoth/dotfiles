#caption always "%m/%d/%y %0c:%s%{- Wk}  %l  %{kW}%-Lw%{= bW}%50>%n%f* %t%{-}%+Lw%<%{- Wk}"
#hardstatus off
#hardstatus string %t
#shelltitle ''

#caption always "%Y/%m/%d %0c  %l %{kW} %-Lw%{= kG}%50>%n%f* %t%{-}%+Lw%<%{- kW}"
#caption always "%{= dd}%Y/%m/%d %0c  %l %{+b dk} %-Lw%{= dg}%50>%n%f* %t%{-}%+Lw%<%{= dd}"
caption always "%{= dd}%Y/%m/%d %0c  %l %{+b dd} %-Lw%{= dg}%50>%n%f* %t%{-}%+Lw%<%{= dd}"
startup_message off
#bell "bell in %n (%t)"
#activity "activity in %n (%t)"
defmonitor on
activity ""
term linux
vbell on
sorendition 20 00
defscrollback 1000
hardstatus off
hardstatus string %t
shelltitle '$ |bash'
bind R screen -t '# |root:' env PROMPT_COMMAND='echo -n -e "\033k\033\134"' sudo su

# Set X terminal title to the hardstatus line
termcapinfo rxvt|xterm|aterm|Xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
#termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
