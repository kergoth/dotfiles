# Easier than remembering to always run from non-X
unsetenv DISPLAY

# Add hardstatus to xterm title bar
terminfo rxvt|xterm*|aterm|Xterm|Eterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

# Make screen messages stand out a little more - black on bright green.
sorendition "+b kG"

# no need for a silly startup message. we know what screen is
startup_message off

# Log new screen windows in utmp.
deflogin on

# Detach on HUP
autodetach on

# If a window goes unresponsive, don't block the whole session waiting for it.
nonblock on

# nethack style error messages
nethack on

defmonitor on

# nil activity message
activity ""

# no audible bell
vbell on

sorendition 20 00

# larger scrollback
defscrollback 1000

# default title, and match for the end of the shell prompt
#shelltitle '$|bash'

# root shell keybinding
bind R screen -t '# |root:' env PROMPT_COMMAND='echo -n -e "\033k\033\134"' sudo su

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"

# tell screen how to set colors. AB = background, AF=foreground
termcapinfo rxvt-xpm|putty|xterm*|rxvt-unicode 'AB=\E[48;5;%dm:AF=\E[38;5;%dm'
termcapinfo rxvt-xpm|putty|xterm* 'Co#256'
termcapinfo rxvt-unicode 'Co#88'

# erase background with current bg color
defbce "on"

hardstatus off
caption always "%{= dd}%Y/%m/%d %0c  %l %{+b dd} %-Lw%{= dg}%50>%n%f* %t%{-}%+Lw%<%{= dd}"
# hardstatus string "%h - %?%t"
hardstatus string "%t%? - %h%?"
