# plain default is uncolored
color.branch.plain Normal
# remote default is red
color.branch.remote Constant
# local default is uncolored
color.branch.local Statement
# current default is green
color.branch.current Function

# default is uncolored
color.status.header Normal
# default is green
color.status.updated Identifier
# default is red
color.status.changed Identifier
# default is red
color.status.untracked Statement

# default is uncolored
color.diff.plain Normal
# default is bold
color.diff.meta Keyword
# default is cyan
color.diff.frag Comment
# default is red
color.diff.old Conditional
# default is green
color.diff.new Identifier
# default is yellow
color.diff.commit Function
# default is red background
color.diff.whitespace Error
