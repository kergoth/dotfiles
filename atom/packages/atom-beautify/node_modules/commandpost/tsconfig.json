{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "types": [
            "node",
            "mocha"
		],
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "stripInternal": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": false,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "listFiles": false,
        "traceResolution": false,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true,
        "listEmittedFiles": false,
        "preserveConstEnums": false,
    },
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
	]
}
