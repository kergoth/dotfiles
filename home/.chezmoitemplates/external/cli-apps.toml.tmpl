{{- $os := .chezmoi.os -}}
{{- $arch := .chezmoi.arch -}}
{{- $binarch := $arch -}}
{{- $refreshPeriod := .external.refreshPeriod -}}
{{- if eq .chezmoi.arch "amd64" -}}
{{-   $binarch = "x86_64" -}}
{{- else if eq .chezmoi.arch "arm64" -}}
{{-   $binarch = "aarch64" -}}
{{- end -}}
{{- $binpath := ".local/bin" -}}
{{- $binsuffix := "" -}}
{{- if eq $os "windows" -}}
{{-   $binpath = "AppData/Local/Programs/bin" -}}
{{-   $binsuffix = ".exe" -}}
{{- end -}}

{{/* Install distrobox on Linux systems */}}
{{ if eq $os "linux" }}
{{-  $distrobox_version := (gitHubLatestRelease "89luca89/distrobox").TagName | trimPrefix "v" }}
{{   range list "distrobox" "distrobox-assemble" "distrobox-create" "distrobox-enter" "distrobox-ephemeral" "distrobox-export" "distrobox-generate-entry" "distrobox-host-exec" "distrobox-init" "distrobox-list" "distrobox-rm" "distrobox-stop" "distrobox-upgrade" -}}
["{{ $binpath }}/{{ . }}"]
  type = "archive-file"
  url = "https://github.com/89luca89/distrobox/archive/refs/tags/{{- $distrobox_version -}}.tar.gz"
  stripComponents = 1
  path = "{{ . }}"
  executable = true
{{   end -}}
{{ end }}

{{/* Install rusage */}}
{{ $rusage_suffix := "" }}
{{ if eq $os "windows" }}
{{   $rusage_suffix = ".com" }}
{{ end }}
["{{ $binpath }}/rusage{{ $rusage_suffix }}"]
type = "file"
url = "https://justine.lol/rusage/rusage.com"
executable = true
refreshPeriod = "{{ $refreshPeriod }}"

{{/* Restic - Fast, secure, efficient backup program */}}
{{- $restic_version := (gitHubLatestRelease "restic/restic").TagName | trimPrefix "v" -}}
{{- $restic_type := "file" -}}
{{- $restic_ext := "bz2" -}}
{{- if eq $os "windows" -}}
{{-   $restic_type = "archive-file" -}}
{{-   $restic_ext = "zip" -}}
{{- end -}}

{{/* Skip for Nix and Chimera Linux - use package managers instead */}}
{{ if not (or .use_nix (eq .osid "linux-chimera")) }}

["{{ $binpath }}/restic{{ $binsuffix }}"]
{{ if eq $restic_type "archive-file" }}
  type = "archive-file"
  url = "https://github.com/restic/restic/releases/download/v{{ $restic_version }}/restic_{{ $restic_version }}_{{ $os }}_{{ $arch }}.{{ $restic_ext }}"
  path = "restic{{ $binsuffix }}"
  executable = true
{{ else }}
  type = "file"
  url = "https://github.com/restic/restic/releases/download/v{{ $restic_version }}/restic_{{ $restic_version }}_{{ $os }}_{{ $arch }}.{{ $restic_ext }}"
  filter.command = "bzcat"
  executable = true
{{ end }}

{{ end }}

{{ if .steamdeck }}

{{/* Install rclone on the Steam Deck */}}
["{{ $binpath }}/rclone{{ $binsuffix }}"]
type = "archive-file"
url = "https://downloads.rclone.org/rclone-current-{{ $os }}-{{ $arch }}.zip"
path = "rclone{{ $binsuffix }}"
stripComponents = 1
executable = true
refreshPeriod = "{{ $refreshPeriod }}"

{{ end }}
