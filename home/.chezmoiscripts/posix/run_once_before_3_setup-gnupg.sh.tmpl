{{- $key_name := "" -}}
{{- if .personal -}}
{{-   $key_name = "personal" -}}
{{- end -}}
{{- if .work -}}
{{-   $key_name = "work" -}}
{{- end -}}
{{- $signing_key := .git.signing_key -}}
{{- if $key_name -}}
#!/usr/bin/env bash

set -euo pipefail

export GNUPGHOME="{{ .gnupg.home }}"

mkdir -p "$GNUPGHOME"
chmod 700 "$GNUPGHOME"

import_key() {
    local fp="$1"
    local enc="$2"

    if gpg --list-secret-keys "$fp" >/dev/null 2>&1; then
        echo >&2 "Secret key $fp already imported."
        return
    fi

    echo >&2 "Importing secret key $fp ..."
    chezmoi decrypt "$enc" | gpg --import -
}

import_pub() {
    local fp="$1"
    local file="$2"

    if gpg --list-keys "$fp" >/dev/null 2>&1; then
        echo >&2 "Public key $fp already imported."
        return
    fi

    echo >&2 "Importing public key $fp ..."
    gpg --import "$file"
}

import_ownertrust() {
    local enc="$1"
    echo >&2 "Importing ownertrust..."
    chezmoi decrypt "$enc" | gpg --import-ownertrust
}

# Import both public keys for signature verification
echo >&2 "Importing public keys for signature verification..."
import_pub "{{ .gnupg.personal_key }}" "{{ .chezmoi.workingTree }}/settings/gnupg/personal/public.asc"
import_pub "{{ .gnupg.work_key }}" "{{ .chezmoi.workingTree }}/settings/gnupg/work/public.asc"

# Import the secret key only for the active context
echo >&2 "Handling GnuPG secret key '{{ $key_name }}' ({{ $signing_key }})"
import_key "{{ $signing_key }}" "{{ .chezmoi.workingTree }}/settings/gnupg/{{ $key_name }}/secret.asc.age"
import_ownertrust "{{ .chezmoi.workingTree }}/settings/gnupg/{{ $key_name }}/ownertrust.asc.age"

echo >&2 "GnuPG setup complete."
{{- end }}
