{{- if .user_setup -}}
{{- $brew_prefix := env "HOMEBREW_PREFSIX" | joinPath (printf "%s" .chezmoi.destDir) ".brew" -}}
{{- $brew_bin := joinPath $brew_prefix "bin" "brew" -}}
{{- if not $brew_bin -}}
#!/bin/sh

HOMEBREW_PREFIX="${HOMEBREW_PREFIX:-$HOME/.brew}"
PATH="$HOMEBREW_PREFIX/bin:$HOME/.local/bin:$PATH"

echo >&2 "Installing homebrew"
"$CHEZMOI_WORKING_TREE/scripts/macos/install-brew" -s "$HOMEBREW_PREFIX" || {
    rm -rf "$HOMEBREW_PREFIX"
    echo >&2 "Failed to install homebrew"
    exit 1
}
{{- end }}
{{- end }}
