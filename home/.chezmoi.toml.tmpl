{{/* detect OS */}}
{{- $osid := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}
{{- $wsl2 := and (eq .chezmoi.os "linux") ( .chezmoi.kernel.osrelease | lower | contains "microsoft" ) -}}
{{- $windows_sandbox := and (eq .chezmoi.os "windows") ( .chezmoi.username | contains "WDAGUtilityAccount" ) -}}
{{- $steamdeck := eq $osid "linux-steamos" -}}
{{- $emudeck := false -}}
{{- $retrodeck := false -}}

{{/* boolean feature flags */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- $work := false -}}{{/* true if this machine is used for work */}}
{{- $work_email := false -}}{{/* true if this machine should use a work email (implicitly set by $work) */}}
{{- $user_setup := true -}}{{/* true if this user should be set up beyond just dotfiles */}}
{{- $macos_split_user := true -}}{{/* true if this is a macOS machine that should have a separate user for admin tasks */}}
{{- $macos_admin_user := "archet" -}}{{/* the username of the admin user on macOS */}}
{{- $use_nix := true -}}{{/* true if this machine should use Nix. default to true*/}}
{{/* device usage flags */}}
{{- $coding := true -}}{{/* true if this device will be used for coding, beyond just shell scripting */}}
{{- $containers := false -}}{{/* true if this machine should have a container runtime installed */}}
{{- $containers_crossarch := false -}}{{/* true if this machine should support cross-architecture containers */}}
{{- $gaming := false -}}{{/* true if this device will be used for gaming */}}
{{- $video := false -}}{{/* true if this device will be used to stream video, controls VLC/etc installation */}}
{{- $music := false -}}{{/* true if this device will be used to listen to music */}}
{{- $music_library := false -}}{{/* true if this device will be used to manage my music library */}}
{{- $ebook_library := false -}}{{/* true if this device will be used to manage my ebook library */}}
{{- $gaming_device_library := false -}}{{/* true if this device will be used to manage my gaming device library */}}
{{- $retro_computing := false -}}{{/* true if this device will be used for retro computing emulation (i.e. 86box) */}}

{{- if eq .chezmoi.os "linux" }}
{{-   if or $steamdeck (eq $osid "linux-chimera") -}}
{{-     $use_nix = false }}
{{-   end }}
{{- end }}
{{- $nix_paths := list "/nix/var/nix/profiles/default/bin" (joinPath .chezmoi.homeDir ".nix-profile/bin") "/run/current-system/sw/bin" -}}
{{- if or (not $user_setup) (not (or (lookPath "nix") (findExecutable "nix" $nix_paths))) }}
{{-   $use_nix = false }}
{{- end }}

{{/* detect macOS version */}}
{{- $macos_major_version := "" -}}
{{- $macos_version := "" -}}
{{- if eq .chezmoi.os "darwin" -}}
    {{- $macos_vers := slice (output "sw_vers" "-productVersion" | trim | splitList "." ) 0 2 }}
    {{- $macos_major_version = index $macos_vers 0 }}
    {{- $macos_version = $macos_vers | join "." -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "CONTAINER_ID") (env "REMOTE_CONTAINERS_IPC") (env "DEVPOD") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{- $devpod := env "DEVPOD" | not | not -}}
{{- $has_devpod_gpg := stat (joinPath (printf "%s" .chezmoi.destDir) ".gnupg/S.gpg-agent") -}}
{{- $skip_gpg := and $devpod $has_devpod_gpg | not | not -}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $hostname := output "scutil" "--get" "ComputerName" | trim -}}
{{- end -}}

{{/* detect interactive mode */}}
{{- $force := or (has "--force" .chezmoi.args) (has "--force=true" .chezmoi.args) -}}
{{- $interactive := and stdinIsATTY (not $force) -}}

{{/* determine whether to prompt interactively */}}
{{- $prompt := or (has "--prompt" .chezmoi.args) (has "--prompt=true" .chezmoi.args) -}}

{{/* set defaults based on context */}}
{{- if not $ephemeral -}}
{{-   if eq $hostname "asano" -}}
{{-     $work = true -}}
{{-     $coding = true -}}
{{-     $containers = true -}}
{{-     $macos_split_user = false -}}
{{-   else if or (eq $hostname "vaelin") (eq $hostname "zorian") -}}
{{-     $personal = true -}}
{{-     $coding = true -}}
{{-     $containers = true -}}
{{-     $gaming = true -}}
{{-     $video = true -}}
{{-     $music = true -}}
{{-     $music_library = true -}}
{{-     $ebook_library = true -}}
{{-     $gaming_device_library = true -}}
{{-     $retro_computing = true -}}
{{-   else if $steamdeck -}}
{{-     $gaming = true -}}
{{-     $personal = true -}}
{{/*    prompt for emulation by default */}}
{{-     $prompt = true -}}
{{-   else if $windows_sandbox -}}
{{-     $ephemeral = true -}}
{{-   else if $interactive -}}
{{/*    prompt for unknown hostnames by default */}}
{{-     $prompt = true -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

{{- $rosetta_enabled := and .containers_crossarch (eq .chezmoi.os "darwin") (eq .chezmoi.arch "arm64") (not (not (stat "/Library/Apple/usr/share/rosetta/rosetta"))) -}}
{{- if $rosetta_enabled -}}
{{-   $containers_crossarch = true -}}
{{- end -}}

{{- $secrets := false -}}

{{/* prompt for overrides */}}
{{- if and $interactive $prompt -}}
{{-   if $steamdeck -}}
{{-     $emudeck = promptBoolOnce . "emudeck" "Will EmuDeck be used?" $emudeck -}}
{{-     $retrodeck = promptBoolOnce . "retrodeck" "Will RetroDeck be used?" (and $retrodeck (not $emudeck)) -}}
{{-   else -}}
{{-     $headless = promptBoolOnce . "headless" "Is this machine headless (no screen or keyboard)?" $headless -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "Is this machine ephemeral (container, cloud, or VM instance)?" $ephemeral -}}
{{-     $work = promptBoolOnce . "work" "Will this be a work machine (use a work email address)?" $work -}}
{{-     if and (not $ephemeral) (not $work) (not $personal) -}}
{{-       $personal = promptBoolOnce . "personal" "Is this a personal machine?" $personal -}}
{{-     end -}}
{{-     $coding = promptBoolOnce . "coding" "Will this machine be used for coding (beyond just scripting)?" $coding -}}
{{-     $containers = promptBoolOnce . "containers" "Should a container runtime be installed?" $containers -}}
{{-     if and (eq .chezmoi.os "darwin") $containers -}}
{{-       $containers_crossarch = promptBoolOnce . "containers_crossarch" "Should cross-architecture containers be supported?" $containers_crossarch -}}
{{-     end -}}
{{-     $gaming = promptBoolOnce . "gaming" "Will this machine be used for gaming?" $gaming -}}
{{-     $video = promptBoolOnce . "video" "Will this machine be used for local video playback (install VLC)?" $video -}}
{{-     $music = promptBoolOnce . "music" "Will this machine be used to listen to music?" $music -}}
{{-     if eq .chezmoi.os "darwin" -}}
{{-       $macos_split_user = promptBoolOnce . "macos_split_user" "Will this macOS system use a separate user for admin tasks?" $macos_split_user -}}
{{-       if $macos_split_user -}}
{{-         $macos_admin_user = promptBoolOnce . "macos_admin_user" "What is the username of the administrative user?" $macos_admin_user -}}
{{-       end -}}
{{-     end -}}
{{-   end -}}
{{- end -}}

