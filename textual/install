TEXTUAL_DIR="$HOME/Library/Group Containers/8482Q6EPL6.com.codeux.irc.textual/Library/Application Support/Textual"
if [ -d "$TEXTUAL_DIR/Styles" ]; then
    for style in styles/*/ base16/styles/*/; do
        if [ -d "$style" ]; then
            name="$(basename "${style%/}")"
            cp -a "$style/." "$TEXTUAL_DIR/Styles/$name/"
        fi
    done
    echo "Copied textual styles to $TEXTUAL_DIR/Styles/"
fi
