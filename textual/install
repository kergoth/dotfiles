TEXTUAL_DIR="$INSTALL_DEST/Library/Group Containers/8482Q6EPL6.com.codeux.irc.textual/Library/Application Support/Textual"
if [ -d "$TEXTUAL_DIR/Styles" ]; then
    for style in styles/*/ base16/styles/*/; do
        name="$(basename "${style%/}")"
        if [ -d "$style" ] && ! [ -d "$TEXTUAL_DIR/Styles/$name" ]; then
            cp -a "$style/." "$TEXTUAL_DIR/Styles/$name/"
        fi
    done
    echo "Copied textual styles to $TEXTUAL_DIR/Styles/"
fi
