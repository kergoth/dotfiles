# vim: set noet sts=0 ft=gitconfig
[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	whitespace = cr-at-eol
	pager = diff-so-fancy | less --tabs=1,5 -r

[user]
	name = Christopher Larson
	email = kergoth@gmail.com

[github]
	user = kergoth

[interactive]
	singlekey = true
	diffFilter = diff-highlight

[push]
	default = tracking

[apply]
	whitespace = fix

[rebase]
	autosquash = true
	autostash = true

[status]
	submodulesummary = true

[diff]
	renames = copy
	mnemonicprefix = true
	ignoreSubmodules = dirty

[merge]
	tool = fugitive
	summary = true
	conflictstyle = diff3

[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"

[tar "tar.xz"]
	command = xz -c

[pack]
	threads = 3

[log]
	decorate = short

[color]
	ui = auto

[color "diff"]
	commit = yellow bold
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red

[notes]
	rewriteRef = refs/notes/*
	rewriteMode = concatenate

[rerere]
	enabled = 1

[help]
	autocorrect = 1

# Pushing over https is a pain due to password prompts, unless you set up a
# .netrc, which is a security issue.
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = http://github.com/
	pushInsteadOf = git://github.com/

[include]
	path = config.alias
	path = config.local

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[git-j]
	alias = m=master
