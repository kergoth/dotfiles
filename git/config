# vim: set noet sts=0 ft=gitconfig:
[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	whitespace = cr-at-eol

[init]
	defaultBranch = main

[user]
	name = Christopher Larson
	email = kergoth@gmail.com

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	singlekey = true
	diffFilter = delta --color-only --features=interactive

[delta]
	theme = Dracula
	navigate = true

[advice]
	detachedHead = false

[github]
	user = kergoth

[interactive]
	diffFilter = git-diff-filter

[pretty]
	lg = format:%Cred%h%Creset %Cgreen%ad%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset

[pull]
	ff = only

[push]
	default = tracking

[rebase]
	autosquash = true
	autostash = true

[revise]
	autoSquash = true

[status]
	submodulesummary = true

[diff]
	renames = copy
	colorMoved = default
	mnemonicprefix = true
	ignoreSubmodules = dirty
	compactionHeuristic = true
	algorithm = patience

[merge]
	tool = wrapper
	summary = true
	conflictstyle = diff3

[mergetool.wrapper]
	cmd = . $(which git-mergetool-wrapper)
	default = vimdiff

[mergetool.vscode]
    cmd = code --wait $MERGED

[tar "tar.xz"]
	command = xz -c

[submodule]
	fetchJobs = 4

[pack]
	threads = 3

[log]
	decorate = short
	excludeDecoration = refs/branchless/* refs/stash

[commit]
	verbose = true

[color]
	ui = auto

[color "diff"]
	commit = 227 bold
	meta = 227
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red

[notes]
	rewriteRef = refs/notes/*
	rewriteMode = concatenate

[rerere]
	enabled = 1

[help]
	autocorrect = 1

[url "git@push.yoctoproject.org:"]
	pushInsteadOf = git://git.yoctoproject.org/

[url "ssh://git@"]
	pushInsteadOf = git://

[include]
	path = config.alias
	path = config.local

[includeIf "gitdir:/"]
	path = config.linux

[includeIf "gitdir/i:C:/"]
	path = config.windows

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[ghq]
	root = $GHQ_ROOT
	root = $GOPATH/src

# Invoke as `ghq import starred motemen`
[ghq "import"]
	starred = github-list-starred

[fixup]
	menu = fzf --height '60%' \
	            --bind 'tab:toggle-preview' \
	            --preview 'git show --color {+1}' \
	            --preview-window=up:80% \
	            --prompt 'Select commit: '
