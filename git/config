# vim: set noet sts=0 ft=gitconfig:
[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
	whitespace = cr-at-eol
	pager = diff-so-fancy | ${PAGER:-less --tabs=4}

[user]
	name = Christopher Larson
	email = kergoth@gmail.com

[github]
	user = kergoth

[interactive]
	singlekey = true
	diffFilter = diff-highlight

[pull]
	ff = only

[push]
	default = tracking

[rebase]
	autosquash = true
	autostash = true

[revise]
	autoSquash = true

[status]
	submodulesummary = true

[diff]
	renames = copy
	mnemonicprefix = true
	ignoreSubmodules = dirty
	compactionHeuristic = true
	algorithm = patience

[merge]
	tool = fugitive
	summary = true
	conflictstyle = diff3

[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"

[tar "tar.xz"]
	command = xz -c

[submodule]
	fetchJobs = 4

[pack]
	threads = 3

[log]
	decorate = short

[commit]
	verbose = true

[color]
	ui = auto

[color "diff"]
	commit = 227 bold
	meta = 227
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red

[notes]
	rewriteRef = refs/notes/*
	rewriteMode = concatenate

[rerere]
	enabled = 1

[help]
	autocorrect = 1

# Pushing over https is a pain due to password prompts, unless you set up a
# .netrc, which is a security issue.
[url "git@gist.github.com:"]
	pushInsteadOf = https://gist.github.com/kergoth/

[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = http://github.com/
	pushInsteadOf = git://github.com/

[url "git@github.com:MentorEmbedded/meta-mentor-"]
	insteadOf = https://github.com/MentorEmbedded/meta-mentor-

[url "https://github.com/MentorEmbedded/meta-mentor"]
	insteadOf = https://github.com/MentorEmbedded/meta-mentor

[url "https://github.com/MentorEmbedded/meta-sourcery"]
	insteadOf = https://github.com/MentorEmbedded/meta-sourcery

[url "git@github.com:MentorEmbedded/"]
	insteadOf = https://github.com/MentorEmbedded/

[url "git@push.yoctoproject.org:"]
	pushInsteadOf = git://git.yoctoproject.org/

[url "ssh://git@"]
	pushInsteadOf = git://

[include]
	path = config.alias
	path = config.local

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[git-j]
	alias = m=master

[ghq]
	root = $GHQ_ROOT
	root = $GOPATH/src

# Invoke as `ghq import starred motemen`
[ghq "import"]
	starred = github-list-starred
[cinnabar]
	version-check = 1565059644
	helper = /Users/kergoth/.local/share/git-cinnabar/git-cinnabar-helper
