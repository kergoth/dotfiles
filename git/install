link . ~/.config/git

touch config.local config.local.$HOSTNAME
git config -f config.local --replace-all include.path "config.local.$HOSTNAME" "config\.local\."
git config -f config.local.$HOSTNAME --unset-all http.sslCAInfo

case "$OSTYPE" in
    darwin*)
        git config -f config.local.$HOSTNAME --replace-all credential.helper osxkeychain
        ;;
esac

# vim: set ft=sh sts=4 sw=4 et :
