if [ -h ~/.config/git ]; then
    rm -f ~/.config/git
fi
mkdir -p ~/.config/git
for i in ignore config*; do
    link $i ~/.config/git/$i
done

touch ~/.config/git/config.local

case "$OSTYPE" in
    darwin*)
        git config -f ~/.config/git/config.local --replace-all credential.helper osxkeychain
        ;;
esac

# vim: set ft=sh sts=4 sw=4 et :
