#!/bin/sh
GITPAGER=$(git config --get core.pager)

if [ -z "$GITPAGER" ]; then
  GITPAGER="$PAGER"
fi

if [ -z "$GITPAGER" ]; then
  GITPAGER="less -R"
fi

if [ "$GITPAGER" = "more" -o "$GITPAGER" = "less" ]; then
  GITPAGER="$GITPAGER -R"
fi

CMD="git difftool --no-prompt --extcmd icdiff $@ | $GITPAGER"
eval $CMD

