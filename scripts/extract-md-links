#!/bin/sh
# Extract the links from markdown

if ! which cmark >/dev/null 2>&1; then
    pipsi install --python python3 commonmark
fi

verbose=0
while getopts vh opt; do
    case "$opt" in
        v)
            verbose=1
            ;;
        \?|h)
            echo >&2 "${0##*/} [-v] [PATH..]"
            exit 2
            ;;
    esac
done
shift $((OPTIND - 1))

if [ $# -eq 0 ]; then
    set -- -
fi

if [ $verbose -eq 0 ]; then
    for fn; do
        cmark "$fn" | pup a 'attr{href}'
    done
else
    for fn; do
        if [ $verbose -eq 1 ]; then
            echo "# $fn"
        fi
        cmark "$fn" | pup 'a json{}' | jq -r '.[] | .text + "\t" + .href'
    done
fi
