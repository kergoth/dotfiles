#!/bin/bash

set -u

if which gfind >/dev/null 2>&1; then
    alias find=gfind
fi

if [ "$1" = "-n" ]; then
    dry_run=1
    shift
else
    dry_run=
fi

if [ $# -eq 0 ]; then
    set -- .
fi

find "$@" \( \( -name .git -o -name .repo \) -a -prune \) -o \( \( \( -type f -name .DS_Store \) -o \( -type f -a -empty -a -not -name .placeholder -a -not -name .gitkeep \) \) -a -print0 \) \
    | xargs -n 1 -0 ${dry_run:+echo }rm -fv
find "$@" \( -type d -name @eaDir \) -print0 \
    | xargs -n 1 -0 ${dry_run:+echo }rm -rfv

find "$@" \( \( -name .git -o -name .repo \) -a -prune \) -o \( \( -type d -empty \) -a -print0 \) \
    | xargs -n 1 -0 ${dry_run:+echo }rmdir -p -v 2>/dev/null
