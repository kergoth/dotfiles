# Cycle thru completions.
"\t":  menu-complete

# Vim style history search
"\e[A": history-search-backward
"\e[B": history-search-forward
"\e[C": forward-char
"\e[D": backward-char

# No audible bell
set bell-style visible

# Expand the tilde char
set expand-tilde on

# Alt key madness
set convert-meta off
set input-meta on
set output-meta on

# Case insensitive completion
set completion-ignore-case On

# Vi-like movement/editing
set editing-mode vi
$if mode=vi
    # It seems that we have to manually set up the mappings for the home/end
    # keys for vi editing mode, otherwise the escape gets caught by the map(s)
    # to switch vi modes.
    set keymap vi-insert
    "\e[7~": beginning-of-line
    "\e[8~": end-of-line
    "\eOH": beginning-of-line
    "\e[H": beginning-of-line
    "\e[1~": beginning-of-line
    "\e[\C-@": beginning-of-line
    "\eO\C-@": beginning-of-line
    "\eOF": end-of-line
    "\e[F": end-of-line
    "\e[4~": end-of-line
    "\eOw": end-of-line
    "\eO\M-\C-p": end-of-line
    "\e[\M-\C-p": end-of-line
    "\e[e": end-of-line
    "\e[\C-p": end-of-line
    set keymap vi-move
    "\e[7~": beginning-of-line
    "\e[8~": end-of-line
    "\eOH": beginning-of-line
    "\e[H": beginning-of-line
    "\e[1~": beginning-of-line
    "\e[\C-@": beginning-of-line
    "\eO\C-@": beginning-of-line
    "\eOF": end-of-line
    "\e[F": end-of-line
    "\e[4~": end-of-line
    "\eOw": end-of-line
    "\eO\M-\C-p": end-of-line
    "\e[\M-\C-p": end-of-line
    "\e[e": end-of-line
    "\e[\C-p": end-of-line
# $else
#     "\e[7~": beginning-of-line
#     "\e[8~": end-of-line
#     "\eOH": beginning-of-line
#     "\e[H": beginning-of-line
#     "\e[1~": beginning-of-line
#     "\e[\C-@": beginning-of-line
#     "\eO\C-@": beginning-of-line
#     "\eOF": end-of-line
#     "\e[F": end-of-line
#     "\e[4~": end-of-line
#     "\eOw": end-of-line
#     "\eO\M-\C-p": end-of-line
#     "\e[\M-\C-p": end-of-line
#     "\e[e": end-of-line
#     "\e[\C-p": end-of-line
$endif
set keymap vi

