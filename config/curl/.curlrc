referer = ";auto"

# Certs
capath = /etc/ssl/certs

# Follow redirects
location

# Use Content-Disposition filename instead of URL
remote-header-name

# Request compression
compressed

# Don't show/download error document - only error code
fail

# FTP setup
ftp-create-dirs
ftp-ssl
ftp-pasv
ftp-method = nocwd

# Load a .netrc for login name and password if it exists
netrc-optional

# When using -o, create the leading dirs if necessary
create-dirs
