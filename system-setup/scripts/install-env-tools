#!/bin/sh

export CFLAGS="${CFLAGS--O2}"
export LDFLAGS

case "$OSTYPE" in
    darwin*)
        if command -v brew >/dev/null 2>&1; then
            eval "$(brew environment --shell=auto | grep -vw PATH)"
            CFLAGS="$CFLAGS -I$(brew --prefix openssl)/include -I$(xcrun --show-sdk-path)/usr/include"
            LDFLAGS="$LDFLAGS -L$(brew --prefix openssl)/lib"
        fi
        ;;
    *)
        if [ -e /etc/arch-release ]; then
            CFLAGS="$CFLAGS -I/usr/include/openssl-1.0"
            LDFLAGS="$LDFLAGS -L/usr/lib/openssl-1.0"
        fi
        ;;
esac

pythonuserdir="$(python -c 'import site; print(site.getuserbase())')" || exit 1
PATH="$pythonuserdir/bin:$(dirname "$0"):$HOME/.local/bin:$PATH"

pipv () {
    kpipsi upgrade "$@" || kpipsi install "$@" || { echo >&2 Error installing $@; return 1; }
}

pipv3 () {
    pipx upgrade "$@" || pipx install "$@" || { echo >&2 Error installing $@; return 1; }
}

pip_install () {
    command python2 -m pip install --user -U "$@" || { echo >&2 Error installing $@; return 1; }
}

pip3_install () {
    command python3 -m pip install --user -U "$@" || { echo >&2 Error installing $@; return 1; }
}

# cargo-update
export CARGO_INSTALL_ROOT=${CARGO_INSTALL_ROOT:-${XDG_DATA_HOME:-~/.local/share}/..}
if ! [ -e "$CARGO_INSTALL_ROOT/bin/cargo-install-update" ]; then
    cargo install "$@" cargo-update
fi
cargo install-update -i fd-find ripgrep bat exa tldr git-series

## Pipsi, pipx
install-pipsi
install-pipx

## Interactive mode python tools
pip_install see
pip3_install see

## General Tools & Utilities
brew install the_silver_searcher
brew install gnu-sed
brew install jq
go get -u github.com/junegunn/fzf/... # or brew install fzf
bat cache --build
cargo install-update -i fd-find ripgrep bat exa tldr
go get -u github.com/edi9999/path-extractor/path-extractor

pipv mercurial gitifyhg hg-git hg-evolve

pipv pythonpy
pipv3 httpie
go get -u github.com/EricChiang/pup # or brew install pup
pip_install hg-git
pipv git-remote-dropbox

# Very handy for screencasts
pipv3 asciinema

## For dotfiles
pipv3 peru

## Handy
go get -u github.com/direnv/direnv

## Script dependencies
go get -u github.com/tomnomnom/unfurl
pip_install SOAPpy # lmwsaction
pip_install dropbox # git-remote-dropbox
pip_install titlecase # variety of scripts, and zsh alias
pip_install toml # toml-set/toml-get, used by the game scripts
pip3_install toml # toml-set/toml-get, used by the game scripts
pip_install sh # various scripts
pip_install hungarian # git-tbdiff
pipv json2yaml # pcposts zsh function
pip_install gitpython # buildhistory-diff

## Pinboard client
#npmv pin-cushion

## Development Tools
go get -u github.com/github/hub
if which brew >/dev/null 2>&1; then
    : ${HOMEBREW_PREFIX:=/opt/homebrew}
    $HOMEBREW_PREFIX/bin/brew install openssl
    export OPENSSL_DIR=$HOMEBREW_PREFIX/opt/openssl
fi
cargo-install git-series
# pprintpp + pp-ez?
# twine?
# wheel?
#pip_install ptpython
pip_install pathlib2
pip_install click
pip_install e
pip3_install e
pip_install better-exceptions-hook
