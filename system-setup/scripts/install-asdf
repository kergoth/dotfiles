#!/bin/sh

# export ASDF_DIR="${1:-${ASDF_DIR:-${XDG_DATA_HOME:-$HOME/.local/share}/asdf}}"
export ASDF_DIR="${ASDF_DIR:-$HOME/.asdf}"

if [ ! -e $ASDF_DIR ]; then
    ASDF_VERSION=0.5.1
    git clone https://github.com/asdf-vm/asdf.git $ASDF_DIR --branch v$ASDF_VERSION
fi

# PATH="$(dirname "$0"):$ASDF_DIR/bin:$ASDF_DIR/shims:$HOME/.local/bin:$PATH"
. $ASDF_DIR/asdf.sh
asdf update
