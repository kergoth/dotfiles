case "$OSTYPE" in
    darwin*)
        VSCODE_HOME="$HOME/Library/Application Support/Code/User"
        ;;
    WSL)
        VSCODE_HOME="$USERPROFILE/AppData/Roaming/Code/User"
        ;;
    *)
        VSCODE_HOME=
        ;;
esac

if [ -d "$VSCODE_HOME" ]; then
    link settings.json "$VSCODE_HOME/settings.json"
    link keybindings.json "$VSCODE_HOME/keybindings.json"
    if [ -d snippets ]; then
        link snippets/. "$VSCODE_HOME/snippets/"
    fi
fi

# vim: set ft=sh :
