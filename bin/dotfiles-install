#!/bin/sh

bindir=$(cd $(dirname $0) && pwd)
dotfiles=$(dirname $bindir)

$bindir/dotfiles-links | while read linkable dest; do
    if [ -h "$dest" ]; then
        rm -f "$dest"
    elif [ -e "$dest" ]; then
        if [ "$1" = "-f" ]; then
            echo >&2 "Warning: forced, removing $dest"
            rm -rf "$dest"
        else
            echo >&2 "Warning: $dest exists, skipping"
            continue
        fi
    fi
    echo >&2 "Linking $dest"
    mkdir -p "$(dirname "$dest")"
    ln -s "$linkable" "$dest"
done