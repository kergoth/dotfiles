# Our identity
user-agent = "Mozilla/4.0 (compatible; MSIE 5.5; Windows 98)"
referer = ";auto"

# Default to downloading the files to the current directory
# Use -o - to download to stdout
remote-name-all

# Certs
capath = /etc/ssl/certs

# Follow redirects
location

# Request compression
compressed

# Continue the download by default when appropriate
continue-at = -

# Don't show/download error document - only error code
fail

# When using -o, create the leading dirs if necessary
create-dirs

# FTP setup
ftp-create-dirs
ftp-ssl
ftp-pasv
ftp-method = nocwd

# Load a .netrc for login name and password if it exists
netrc-optional
