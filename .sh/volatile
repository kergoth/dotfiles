setvolatile () {
    if [ -d "`dirname ${VOLATILEPATH}/$1`" ]; then
        eval "$2=\"${VOLATILEPATH}/$1\""
    else
        eval "$2=\"${HOME}/$1\""
    fi
    export $2
}

#VOLATILEPATH="/scratch/${USER}"
VOLATILEPATH="${HOME}"

setvolatile .ccache CCACHE_DIR
setvolatile .bash_history HISTFILE
setvolatile .viminfo VIMINFO
