alias diff='diff -urNdp'
alias glxgears='glxgears -printfps'
#alias fgl_glxgears='fgl_glxgears -fbo'
if which vim >/dev/null 2>&1; then
    alias vi='vim'
fi
alias symbolsizes="${NM} -S -t d --size-sort"
alias lr='ls --sort=time --reverse'
alias ct='cleartool'
alias cpe='clearprojexp'
alias hd='od -t x1'
alias mt='monotone'
alias bb='bitbake'
alias rem='remind'
if which less >/dev/null 2>&1; then
    alias more='less'
fi
alias pgrep='pgrep -l'

alias mtn-add='mtn list unknown | xargs mtn add'
alias mtn-drop='mtn drop --missing'

alias gg='GREP_OPTIONS=--color=always git-grep'
if which colordiff >/dev/null 2>&1; then
    alias diff=colordiff
fi
