alias diff="diff -urNdp -X $HOME/.sh/dontdiff"
alias glxgears='glxgears -printfps'
#alias fgl_glxgears='fgl_glxgears -fbo'
if type vim >/dev/null 2>&1; then
    alias vi='vim'
fi
alias ct='cleartool'
alias cpe='clearprojexp'
alias hd='od -t x1'
alias mt='monotone'
alias bb='bitbake'
alias rem='remind'
if type less >/dev/null 2>&1; then
    alias more='less'
fi

alias mtn-add='mtn list unknown | xargs mtn add'
alias mtn-drop='mtn drop --missing'
alias du="du -X $HOME/.sh/dontdiff"

alias gg='GREP_OPTIONS=--color=always git-grep'
if which colordiff >/dev/null 2>&1; then
    alias diff=colordiff
fi

alias ps='ps -o user,group,pid,stat,wchan:8,cmd --forest'

if [ -n "$PS1" ]; then
    if ! supports_color || [ "$SHELL" = "/bin/sh" ]; then
        alias ls='ls -F -ApBhq'
    else
        alias ls='ls --color=auto -ApBhq'
    fi
fi
alias lr='ls -tr' # list, sort by time, reverse order
alias bc='bc -ql'
