// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Tokyo Night Storm",
  "ui_font_family": "MesloLGS NF",
  "ui_font_features": {
    "calt": true
  },
  "ui_font_size": 14,
  "buffer_font_family": "MesloLGS NF",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 12,
  "autosave": { "after_delay": { "milliseconds": 500 } },
  "git": {
    // Disable the inline git blame information.
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    // Enable inlay hints.
    "enabled": true
  },
  "telemetry": {
    // Do not send debug info like crash reports.
    "diagnostics": false,
    // Do not send anonymized usage data like what languages you're using Zed with.
    "metrics": false
  },
  "terminal": {
    "font_size": 12,
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    }
  }
}
